<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:background="@drawable/background"
  android:layout_height="fill_parent">
 
 
 <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:gravity="center_vertical"
      android:background="@drawable/topbg"
      android:layout_height="55dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#fffdfdfd"
          android:textSize="24px"
          android:text="@string/myhealth_title"
      />
      <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:textColor="#fffdfdfd"
          android:textSize="24px"
          android:paddingLeft="300dp"
          android:id="@+id/myhealth_user"
      />

          <cn.younext.DigitalClock
              android:id="@+id/myhealth_digitalclock"
              android:textColor="#fffdfdfd"
              android:paddingLeft="5dp"
              android:gravity="center"
              android:textSize="24px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/> 
              <cn.younext.BatteryView
        android:id="@+id/batteryview"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="20dp"/>   
                
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="375dp">
    <LinearLayout
    android:orientation="horizontal"
    android:background="@drawable/centerbg"
    android:layout_margin="5px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
  android:layout_width="267dp"
  android:layout_height="190dp"
  android:gravity="center">
<Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/myhealth_healthreportxml"
  android:gravity="center"
  android:id="@+id/myhealth_healthreport"
  />
  </LinearLayout>
  <LinearLayout
  android:layout_width="267dp"
  android:layout_height="190dp"
  android:gravity="center">
  <Button
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/myhealth_testrecordxml"
   android:gravity="center"
   android:id="@+id/myhealth_testrecord"
   />
   </LinearLayout>

</LinearLayout> </LinearLayout>
<LinearLayout
      android:orientation="horizontal"
      android:background="@drawable/bottombg"
      android:gravity="center_vertical"
      android:layout_width="fill_parent"     
      android:layout_height="fill_parent" >
<Button
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/all_homebtn"
  android:id="@+id/homebutton"
  ></Button>
  
  </LinearLayout>
  </LinearLayout>