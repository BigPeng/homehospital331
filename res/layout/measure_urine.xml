<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/topbg" >

        <TextView
            android:id="@+id/connect_status"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/unconnect" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_title"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />

            <TextView
                android:id="@+id/test_xuetang_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="300dp"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />

            <cn.younext.DigitalClock
                android:id="@+id/test_xuetang_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />

            <cn.younext.BatteryView
                android:id="@+id/batteryview"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5px"
            android:background="@drawable/centerbg"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/myhealth_healthreport_leftbackground"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:src="@drawable/test_taixin_little" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/test_greenpoint" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/myhealth_test_taixin_buzou1"
                        android:textColor="#ff444444"
                        android:textSize="18px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/test_greenpoint" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/myhealth_test_taixin_buzou2"
                        android:textColor="#ff444444"
                        android:textSize="18px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/test_greenpoint" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/myhealth_test_taixin_buzou3"
                        android:textColor="#ff444444"
                        android:textSize="18px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cont_bg03"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/cont_bg03"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEU:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/leu"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIT:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/nit"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UBG:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/ubg"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRO:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/pro"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pH:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/pH"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLD:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/bld"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KET:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/ket"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BIL:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/bil"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GLU:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/glu"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VC:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/vc"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SG:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sg"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="测量时间:"
                            android:textColor="#ff444444"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/measure_time"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#ff444444"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/cont_bg03"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/get_data_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="获取测量数据" />

                    <Button
                        android:id="@+id/find_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="查找设备" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bottombg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/test_taixin_homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_homebtn" >
        </Button>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/test_taixin_returnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/all_returnbtn"
                android:gravity="right" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>